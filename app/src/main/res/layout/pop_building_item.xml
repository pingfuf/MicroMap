<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fri_box"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center">
        <ImageView android:id="@+id/building_pop_mark"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:src="@drawable/search"
            android:layout_centerVertical="true"
            />
        <TextView android:id="@+id/building_pop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/building_pop_mark"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="TTTTTTTTTT" />

        <ImageView android:id="@+id/building_pop_path"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/building_pop_text"
            android:src="@drawable/pathfind"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>
