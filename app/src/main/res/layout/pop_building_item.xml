<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@drawable/bg_fri_box"
    android:gravity="center">
    <ImageView android:id="@+id/building_pop_mark"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/search"
        android:layout_centerVertical="true"
        />
    <TextView android:id="@+id/building_pop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/building_pop_mark"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:text="TTTTTTTTTT"
        >
    </TextView>
    <ImageView android:id="@+id/building_pop_path"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/building_pop_text"
        android:layout_marginRight="10dp"
        android:src="@drawable/pathfind"
        android:layout_centerVertical="true"
        />

</RelativeLayout>